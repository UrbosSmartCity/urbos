<?xml version="1.0" encoding="UTF-8"?>
<templates>

    <t t-name="ViewSmartTrafic.buttons">
      <div class="btn-group" role="toolbar" aria-label="Change graph">
          <button class="btn btn-secondary fa fa-globe o_map_button" data-mode="earth" title="Earth" aria-label="Earth"/>
          <button class="btn btn-secondary fa fa-map-signs o_map_button" data-mode="default" title="Map" aria-label="Map"/>
          <button class="btn btn-secondary fa fa-fire o_map_button" data-mode="hum" title="Humanitarian" aria-label="Humanitarian"/>
          <button class="btn btn-secondary fa fa-map-o o_map_button" data-mode="dark" title="Dark" aria-label="Dark"/>
      </div>
    </t>

    <t t-name="ViewSmartTrafic">
            <div id="windy" class="windy"></div>
    </t>

    <div t-name="MapView.error" class="o_view_nocontent" role="alert">
        <div class="o_nocontent_help">
            <p class="o_view_nocontent_empty_folder"><t t-esc="title"/></p>
            <p><t t-esc="description"/></p>
        </div>
    </div>
</templates>
